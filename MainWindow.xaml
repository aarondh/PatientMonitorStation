<Window x:Class="WPFPatientMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:WPFPatientMonitor.Presentation.Controls"
        mc:Ignorable="d"
        Title="Patient Vital Signs Monitor" Height="750" Width="1300"
        Background="#0f0f0f">
    
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left: Detailed Patient Monitors -->
        <Border Grid.Column="0"
                Background="#1a1a1a"
                BorderBrush="#2ECC71"
                BorderThickness="1"
                CornerRadius="10"
                Padding="10"
                Margin="0,0,10,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                         HorizontalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding DetailedPatients}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="2"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <controls:PatientMonitorsControl DataContext="{Binding}"
                                                             Margin="5"
                                                             VerticalAlignment="Stretch"
                                                             HorizontalAlignment="Stretch"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
        
        <Border Grid.Column="1"
                Background="#1a1a1a"
                BorderBrush="#3498DB"
                BorderThickness="1"
                CornerRadius="10"
                Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                         HorizontalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding AllPatients}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="2"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#252525"
                                        BorderBrush="#444"
                                        BorderThickness="1"
                                        CornerRadius="5"
                                        Margin="0,0,0,5"
                                        Padding="8"
                                        Cursor="Hand">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect Color="#000000" 
                                                                     BlurRadius="5" 
                                                                     ShadowDepth="3" 
                                                                     Opacity="0.5"/>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                    <Setter Property="BorderBrush" Value="#2ECC71"/>
                                                    <Setter Property="BorderThickness" Value="4"/>
                                                    <Setter Property="Background" Value="#2a3a2a"/>
                                                    <Setter Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="#2ECC71" 
                                                                             BlurRadius="15" 
                                                                             ShadowDepth="0" 
                                                                             Direction="0"
                                                                             Opacity="0.8"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="BorderBrush" Value="#3498DB"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Border.InputBindings>
                                        <MouseBinding MouseAction="LeftClick" 
                                                    Command="{Binding DataContext.SelectPatientCommand, 
                                                             RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"/>
                                        <MouseBinding MouseAction="LeftDoubleClick" 
                                                    Command="{Binding DataContext.SelectPatientDetailCommand, 
                                                             RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"/>
                                    </Border.InputBindings>
                                    
                                    <StackPanel>
                                        <TextBlock Text="{Binding FullName}"
                                                   FontSize="11"
                                                   FontWeight="Bold"
                                                   Foreground="#fff"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock FontSize="9" Foreground="#888" Margin="0,2,0,0">
                                            <Run Text="Room "/>
                                            <Run Text="{Binding RoomName}"/>
                                        </TextBlock>
                                        
                                        <Grid Margin="0,5,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="HR" FontSize="7" Foreground="#888"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding CurrentHeartRate}" 
                                                              FontSize="14" 
                                                              FontWeight="Bold" 
                                                              Foreground="#2ECC71"/>
                                                    <TextBlock Text=" bpm" 
                                                              FontSize="7" 
                                                              Foreground="#888" 
                                                              VerticalAlignment="Bottom"/>
                                                </StackPanel>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="SpOâ‚‚" FontSize="7" Foreground="#888"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding CurrentSpO2}" 
                                                              FontSize="14" 
                                                              FontWeight="Bold" 
                                                              Foreground="#fff"/>
                                                    <TextBlock Text="%" 
                                                              FontSize="7" 
                                                              Foreground="#888" 
                                                              VerticalAlignment="Bottom"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                        
                                        <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                            <TextBlock Text="{Binding CurrentSystolic}" 
                                                      FontSize="12" 
                                                      Foreground="#E74C3C"/>
                                            <TextBlock Text="/" 
                                                      FontSize="12" 
                                                      Foreground="#888" 
                                                      Margin="2,0"/>
                                            <TextBlock Text="{Binding CurrentDiastolic}" 
                                                      FontSize="12" 
                                                      Foreground="#E74C3C"/>
                                            <TextBlock Text=" mmHg" 
                                                      FontSize="7" 
                                                      Foreground="#888" 
                                                      VerticalAlignment="Bottom" 
                                                      Margin="2,0,0,0"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
        </Border>
    </Grid>
</Window>
