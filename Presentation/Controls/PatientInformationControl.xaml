<UserControl x:Class="WPFTest.Presentation.Controls.PatientInformationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Border Background="#1a1a1a"
            BorderBrush="#2ECC71"
            BorderThickness="1"
            CornerRadius="10"
            Padding="15">
        <StackPanel>
            <!-- Horizontal Info Grid -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!-- Patient Name (Full Width) -->
                <StackPanel Grid.Column="0"  Margin="0,0,0,15">
                    <TextBlock Text="Patient Name"
                            FontSize="12"
                            Foreground="#888"
                            Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding FullName}"
                            FontSize="24"
                            FontWeight="Bold"
                            Foreground="#2ECC71"/>
                </StackPanel>
                <!-- Age -->
                <StackPanel Grid.Column="1" Margin="0,0,10,0">
                    <TextBlock Text="Age"
                               FontSize="12"
                               Foreground="#888"
                               Margin="0,0,0,5"/>
                    <TextBlock FontSize="16"
                               Foreground="#fff">
                        <Run Text="{Binding Age, Mode=OneWay}"/>
                        <Run Text=" years"/>
                    </TextBlock>
                </StackPanel>

                <!-- Date of Birth -->
                <StackPanel Grid.Column="2" Margin="0,0,10,0">
                    <TextBlock Text="Date of Birth"
                               FontSize="12"
                               Foreground="#888"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding DateOfBirth, StringFormat='{}{0:MMMM dd, yyyy}'}"
                               FontSize="16"
                               Foreground="#fff"/>
                </StackPanel>

                <!-- Primary Care Giver -->
                <StackPanel Grid.Column="3" Margin="0,0,10,0">
                    <TextBlock Text="Primary Care Giver"
                               FontSize="12"
                               Foreground="#888"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding PrimaryCareGiver}"
                               FontSize="16"
                               Foreground="#fff"/>
                </StackPanel>

                <!-- Room -->
                <StackPanel Grid.Column="4">
                    <TextBlock Text="Room"
                               FontSize="12"
                               Foreground="#888"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding RoomName}"
                               FontSize="16"
                               Foreground="#fff"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
