<UserControl x:Class="WPFTest.Presentation.Controls.MonitorSettingEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="600">
    <Border Background="#252525"
            BorderBrush="#444"
            BorderThickness="1"
            CornerRadius="5"
            Padding="15"
            Margin="0,5">
        <StackPanel>
            <!-- Monitor Name Header -->
            <TextBlock Text="{Binding MonitorName}"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="#2ECC71"
                       Margin="0,0,0,10"/>

            <!-- View Setting -->
            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="View"
                           FontSize="12"
                           Foreground="#aaa"
                           VerticalAlignment="Center"/>

                <ComboBox Grid.Column="1"
                          SelectedValue="{Binding Setting.State, Mode=TwoWay}"
                          Background="#1a1a1a"
                          Foreground="#000"
                          BorderBrush="#555"
                          HorizontalAlignment="Stretch">
                    <ComboBox.ItemsSource>
                        <x:Array Type="{x:Type system:String}">
                            <system:String>None</system:String>
                            <system:String>Vital</system:String>
                            <system:String>Graph</system:String>
                            <system:String>Both</system:String>
                        </x:Array>
                    </ComboBox.ItemsSource>
                </ComboBox>
            </Grid>

            <!-- Stroke Color -->
            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Stroke Color"
                           FontSize="12"
                           Foreground="#aaa"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBox Text="{Binding Setting.StrokeColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Width="100"
                             Background="#1a1a1a"
                             Foreground="#fff"
                             BorderBrush="#555"
                             Padding="5"/>
                    <Border Width="30" Height="25"
                            Background="{Binding Setting.StrokeColor}"
                            BorderBrush="#555"
                            BorderThickness="1"
                            CornerRadius="3"
                            Margin="5,0,0,0"/>
                </StackPanel>
            </Grid>

            <!-- Fill Color -->
            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Fill Color"
                           FontSize="12"
                           Foreground="#aaa"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBox Text="{Binding Setting.FillColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Width="100"
                             Background="#1a1a1a"
                             Foreground="#fff"
                             BorderBrush="#555"
                             Padding="5"/>
                    <Border Width="30" Height="25"
                            Background="{Binding Setting.FillColor}"
                            BorderBrush="#555"
                            BorderThickness="1"
                            CornerRadius="3"
                            Margin="5,0,0,0"/>
                </StackPanel>
            </Grid>

            <!-- Border Color -->
            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Border Color"
                           FontSize="12"
                           Foreground="#aaa"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBox Text="{Binding Setting.BorderColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Width="100"
                             Background="#1a1a1a"
                             Foreground="#fff"
                             BorderBrush="#555"
                             Padding="5"/>
                    <Border Width="30" Height="25"
                            Background="{Binding Setting.BorderColor}"
                            BorderBrush="#555"
                            BorderThickness="1"
                            CornerRadius="3"
                            Margin="5,0,0,0"/>
                </StackPanel>
            </Grid>

            <!-- Alarm Settings Section -->
            <Border Background="#1a1a1a"
                    BorderBrush="#555"
                    BorderThickness="1"
                    CornerRadius="5"
                    Padding="10"
                    Margin="0,10,0,0">
                <StackPanel>
                    <TextBlock Text="Alarm Settings"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="#E74C3C"
                               Margin="0,0,0,10"/>

                    <!-- Alarm Enabled -->
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Enabled"
                                   FontSize="12"
                                   Foreground="#aaa"
                                   VerticalAlignment="Center"/>

                        <CheckBox Grid.Column="1"
                                  IsChecked="{Binding Setting.Alarm.IsEnabled, Mode=TwoWay}"
                                  VerticalAlignment="Center"
                                  Foreground="#fff"/>
                    </Grid>

                    <!-- Normal Range -->
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Normal Range"
                                   FontSize="12"
                                   Foreground="#aaa"
                                   VerticalAlignment="Center"/>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBox Text="{Binding Setting.Alarm.NormalRange.Min, Mode=TwoWay}"
                                     Width="60"
                                     Background="#1a1a1a"
                                     Foreground="#fff"
                                     BorderBrush="#555"
                                     Padding="5"
                                     Margin="0,0,5,0"/>
                            <TextBlock Text="-"
                                       FontSize="12"
                                       Foreground="#888"
                                       VerticalAlignment="Center"
                                       Margin="0,0,5,0"/>
                            <TextBox Text="{Binding Setting.Alarm.NormalRange.Max, Mode=TwoWay}"
                                     Width="60"
                                     Background="#1a1a1a"
                                     Foreground="#fff"
                                     BorderBrush="#555"
                                     Padding="5"/>
                        </StackPanel>
                    </Grid>

                    <!-- Warning Range -->
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Warning Range"
                                   FontSize="12"
                                   Foreground="#aaa"
                                   VerticalAlignment="Center"/>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBox Text="{Binding Setting.Alarm.WarningRange.Min, Mode=TwoWay}"
                                     Width="60"
                                     Background="#1a1a1a"
                                     Foreground="#fff"
                                     BorderBrush="#555"
                                     Padding="5"
                                     Margin="0,0,5,0"/>
                            <TextBlock Text="-"
                                       FontSize="12"
                                       Foreground="#888"
                                       VerticalAlignment="Center"
                                       Margin="0,0,5,0"/>
                            <TextBox Text="{Binding Setting.Alarm.WarningRange.Max, Mode=TwoWay}"
                                     Width="60"
                                     Background="#1a1a1a"
                                     Foreground="#fff"
                                     BorderBrush="#555"
                                     Padding="5"/>
                        </StackPanel>
                    </Grid>

                    <!-- Critical Range -->
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Critical Range"
                                   FontSize="12"
                                   Foreground="#aaa"
                                   VerticalAlignment="Center"/>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBox Text="{Binding Setting.Alarm.CriticalRange.Min, Mode=TwoWay}"
                                     Width="60"
                                     Background="#1a1a1a"
                                     Foreground="#fff"
                                     BorderBrush="#555"
                                     Padding="5"
                                     Margin="0,0,5,0"/>
                            <TextBlock Text="-"
                                       FontSize="12"
                                       Foreground="#888"
                                       VerticalAlignment="Center"
                                       Margin="0,0,5,0"/>
                            <TextBox Text="{Binding Setting.Alarm.CriticalRange.Max, Mode=TwoWay}"
                                     Width="60"
                                     Background="#1a1a1a"
                                     Foreground="#fff"
                                     BorderBrush="#555"
                                     Padding="5"/>
                        </StackPanel>
                    </Grid>

                    <!-- Warning Color -->
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Warning Color"
                                   FontSize="12"
                                   Foreground="#aaa"
                                   VerticalAlignment="Center"/>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBox Text="{Binding Setting.Alarm.WarningColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Width="100"
                                     Background="#1a1a1a"
                                     Foreground="#fff"
                                     BorderBrush="#555"
                                     Padding="5"/>
                            <Border Width="30" Height="25"
                                    Background="{Binding Setting.Alarm.WarningColor}"
                                    BorderBrush="#555"
                                    BorderThickness="1"
                                    CornerRadius="3"
                                    Margin="5,0,0,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Critical Color -->
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Critical Color"
                                   FontSize="12"
                                   Foreground="#aaa"
                                   VerticalAlignment="Center"/>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBox Text="{Binding Setting.Alarm.CriticalColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Width="100"
                                     Background="#1a1a1a"
                                     Foreground="#fff"
                                     BorderBrush="#555"
                                     Padding="5"/>
                            <Border Width="30" Height="25"
                                    Background="{Binding Setting.Alarm.CriticalColor}"
                                    BorderBrush="#555"
                                    BorderThickness="1"
                                    CornerRadius="3"
                                    Margin="5,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </Border>
</UserControl>
