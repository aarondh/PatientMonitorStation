<UserControl x:Class="WPFPatientMonitor.Presentation.Controls.PatientMonitorsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:WPFPatientMonitor.Presentation.Controls"
             mc:Ignorable="d">
    <Border Background="#252525"
            BorderBrush="#444"
            BorderThickness="1"
            CornerRadius="5"
            Padding="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left: Monitor Graphs -->
            <Grid Grid.Column="0" Margin="0,0,5,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Patient Name Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,5">
                    <TextBlock Text="{Binding FullName}"
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="#2ECC71"/>
                    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                        <TextBlock Text="Age: " Foreground="#888" FontSize="8"/>
                        <TextBlock Text="{Binding Age}" Foreground="#ccc" FontSize="8"/>
                        <TextBlock Text=" | " Foreground="#888" FontSize="8" Margin="3,0"/>
                        <TextBlock Text="{Binding PrimaryCareGiver}" Foreground="#ccc" FontSize="8"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Monitor Graphs Column - All ECG Leads -->
                <StackPanel Grid.Row="1">
                    <!-- Lead I -->
                    <Border Background="{Binding MonitorSettings[LeadI].FillColor}"
                            BorderBrush="{Binding MonitorSettings[LeadI].BorderColor}"
                            BorderThickness="1"
                            CornerRadius="3"
                            Margin="2"
                            Height="28">
                        <Grid>
                            <TextBlock Text="{Binding MonitorSettings[LeadI].GraphLabel}"
                                      FontSize="7"
                                      Foreground="#888"
                                      Margin="3,2,0,0"
                                      VerticalAlignment="Top"
                                      HorizontalAlignment="Left"/>
                            <controls:MonitorGraph Data="{Binding LeadIData}"
                                                  StrokeColor="{Binding MonitorSettings[LeadI].StrokeColor}"/>
                        </Grid>
                    </Border>

                    <!-- Lead II -->
                    <Border Background="{Binding MonitorSettings[LeadII].FillColor}"
                            BorderBrush="{Binding MonitorSettings[LeadII].BorderColor}"
                            BorderThickness="1"
                            CornerRadius="3"
                            Margin="2"
                            Height="28">
                        <Grid>
                            <TextBlock Text="{Binding MonitorSettings[LeadII].GraphLabel}"
                                      FontSize="7"
                                      Foreground="#888"
                                      Margin="3,2,0,0"
                                      VerticalAlignment="Top"
                                      HorizontalAlignment="Left"/>
                            <controls:MonitorGraph Data="{Binding LeadIIData}"
                                                  StrokeColor="{Binding MonitorSettings[LeadII].StrokeColor}"/>
                        </Grid>
                    </Border>

                    <!-- Lead III -->
                    <Border Background="{Binding MonitorSettings[LeadIII].FillColor}"
                            BorderBrush="{Binding MonitorSettings[LeadIII].BorderColor}"
                            BorderThickness="1"
                            CornerRadius="3"
                            Margin="2"
                            Height="28">
                        <Grid>
                            <TextBlock Text="{Binding MonitorSettings[LeadIII].GraphLabel}"
                                      FontSize="7"
                                      Foreground="#888"
                                      Margin="3,2,0,0"
                                      VerticalAlignment="Top"
                                      HorizontalAlignment="Left"/>
                            <controls:MonitorGraph Data="{Binding LeadIIIData}"
                                                  StrokeColor="{Binding MonitorSettings[LeadIII].StrokeColor}"/>
                        </Grid>
                    </Border>

                    <!-- Lead AVR -->
                    <Border Background="{Binding MonitorSettings[LeadAVR].FillColor}"
                            BorderBrush="{Binding MonitorSettings[LeadAVR].BorderColor}"
                            BorderThickness="1"
                            CornerRadius="3"
                            Margin="2"
                            Height="28">
                        <Grid>
                            <TextBlock Text="{Binding MonitorSettings[LeadAVR].GraphLabel}"
                                      FontSize="7"
                                      Foreground="#888"
                                      Margin="3,2,0,0"
                                      VerticalAlignment="Top"
                                      HorizontalAlignment="Left"/>
                            <controls:MonitorGraph Data="{Binding LeadAVRData}"
                                                  StrokeColor="{Binding MonitorSettings[LeadAVR].StrokeColor}"/>
                        </Grid>
                    </Border>

                    <!-- Lead AVL -->
                    <Border Background="{Binding MonitorSettings[LeadAVL].FillColor}"
                            BorderBrush="{Binding MonitorSettings[LeadAVL].BorderColor}"
                            BorderThickness="1"
                            CornerRadius="3"
                            Margin="2"
                            Height="28">
                        <Grid>
                            <TextBlock Text="{Binding MonitorSettings[LeadAVL].GraphLabel}"
                                      FontSize="7"
                                      Foreground="#888"
                                      Margin="3,2,0,0"
                                      VerticalAlignment="Top"
                                      HorizontalAlignment="Left"/>
                            <controls:MonitorGraph Data="{Binding LeadAVLData}"
                                                  StrokeColor="{Binding MonitorSettings[LeadAVL].StrokeColor}"/>
                        </Grid>
                    </Border>

                    <!-- Respiratory -->
                    <Border Background="{Binding MonitorSettings[RespiratoryRate].FillColor}"
                            BorderBrush="{Binding MonitorSettings[RespiratoryRate].BorderColor}"
                            BorderThickness="1"
                            CornerRadius="3"
                            Margin="2"
                            Height="28">
                        <Grid>
                            <TextBlock Text="{Binding MonitorSettings[RespiratoryRate].GraphLabel}"
                                      FontSize="7"
                                      Foreground="#888"
                                      Margin="3,2,0,0"
                                      VerticalAlignment="Top"
                                      HorizontalAlignment="Left"/>
                            <controls:MonitorGraph Data="{Binding RespiratoryData}"
                                                  StrokeColor="{Binding MonitorSettings[RespiratoryRate].StrokeColor}"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>
            
            <!-- Right: Vital Signs Values -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <!-- Heart Rate -->
                <StackPanel HorizontalAlignment="Center" Margin="0,5">
                    <TextBlock Text="{Binding MonitorSettings[HeartRate].GraphLabel}"
                               FontSize="8"
                               Foreground="#888"
                               HorizontalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding CurrentHeartRate}"
                                  FontSize="18"
                                  FontWeight="Bold"
                                  Foreground="{Binding MonitorSettings[HeartRate].StrokeColor}"/>
                        <TextBlock Text="{Binding MonitorSettings[HeartRate].Unit, StringFormat=' {0}'}"
                                  FontSize="7"
                                  Foreground="#888"
                                  VerticalAlignment="Bottom"
                                  Margin="2,0,0,2"/>
                    </StackPanel>
                </StackPanel>

                <!-- Blood Pressure -->
                <StackPanel HorizontalAlignment="Center" Margin="0,5">
                    <TextBlock Text="{Binding MonitorSettings[BloodPressure].GraphLabel}"
                               FontSize="8"
                               Foreground="#888"
                               HorizontalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding CurrentSystolic}"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Foreground="{Binding MonitorSettings[BloodPressure].StrokeColor}"/>
                        <TextBlock Text="/"
                                  FontSize="16"
                                  Foreground="#888"
                                  Margin="1,0"/>
                        <TextBlock Text="{Binding CurrentDiastolic}"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Foreground="{Binding MonitorSettings[BloodPressure].StrokeColor}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Respiratory Rate -->
                <StackPanel HorizontalAlignment="Center" Margin="0,5">
                    <TextBlock Text="{Binding MonitorSettings[RespiratoryRate].GraphLabel}"
                               FontSize="8"
                               Foreground="#888"
                               HorizontalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding CurrentRespiratoryRate}"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Foreground="{Binding MonitorSettings[RespiratoryRate].StrokeColor}"/>
                        <TextBlock Text="{Binding MonitorSettings[RespiratoryRate].Unit, StringFormat=' {0}'}"
                                  FontSize="7"
                                  Foreground="#888"
                                  VerticalAlignment="Bottom"
                                  Margin="2,0,0,2"/>
                    </StackPanel>
                </StackPanel>

                <!-- SpO2 -->
                <StackPanel HorizontalAlignment="Center" Margin="0,5">
                    <TextBlock Text="{Binding MonitorSettings[SpO2].GraphLabel}"
                               FontSize="8"
                               Foreground="#888"
                               HorizontalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding CurrentSpO2}"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Foreground="{Binding MonitorSettings[SpO2].StrokeColor}"/>
                        <TextBlock Text="{Binding MonitorSettings[SpO2].Unit, StringFormat=' {0}'}"
                                  FontSize="7"
                                  Foreground="#888"
                                  VerticalAlignment="Bottom"
                                  Margin="2,0,0,2"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
