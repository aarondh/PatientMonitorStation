<UserControl x:Class="WPFTest.Presentation.Controls.PatientMonitorsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:WPFTest.Presentation.Controls"
             mc:Ignorable="d">
    <Border Background="#252525"
            BorderBrush="#444"
            BorderThickness="1"
            CornerRadius="5"
            Padding="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left: Monitor Graphs -->
            <Grid Grid.Column="0" Margin="0,0,5,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Patient Name Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,5">
                    <TextBlock Text="{Binding FullName}"
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="#2ECC71"/>
                    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                        <TextBlock Text="Age: " Foreground="#888" FontSize="8"/>
                        <TextBlock Text="{Binding Age}" Foreground="#ccc" FontSize="8"/>
                        <TextBlock Text=" | " Foreground="#888" FontSize="8" Margin="3,0"/>
                        <TextBlock Text="{Binding PrimaryCareGiver}" Foreground="#ccc" FontSize="8"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Monitor Graphs Column - All ECG Leads -->
                <StackPanel Grid.Row="1">
                    <!-- Lead I -->
                    <Border Background="#1a1a1a" 
                            BorderBrush="#2ECC71" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Margin="2"
                            Height="28">
                        <Grid>
                            <TextBlock Text="Lead I" 
                                      FontSize="7" 
                                      Foreground="#888" 
                                      Margin="3,2,0,0"
                                      VerticalAlignment="Top"
                                      HorizontalAlignment="Left"/>
                            <controls:MonitorGraph Data="{Binding LeadIData}"
                                                  StrokeColor="#2ECC71"/>
                        </Grid>
                    </Border>
                    
                    <!-- Lead II -->
                    <Border Background="#1a1a1a" 
                            BorderBrush="#2ECC71" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Margin="2"
                            Height="28">
                        <Grid>
                            <TextBlock Text="Lead II" 
                                      FontSize="7" 
                                      Foreground="#888" 
                                      Margin="3,2,0,0"
                                      VerticalAlignment="Top"
                                      HorizontalAlignment="Left"/>
                            <controls:MonitorGraph Data="{Binding LeadIIData}"
                                                  StrokeColor="#2ECC71"/>
                        </Grid>
                    </Border>
                    
                    <!-- Lead III -->
                    <Border Background="#1a1a1a" 
                            BorderBrush="#2ECC71" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Margin="2"
                            Height="28">
                        <Grid>
                            <TextBlock Text="Lead III" 
                                      FontSize="7" 
                                      Foreground="#888" 
                                      Margin="3,2,0,0"
                                      VerticalAlignment="Top"
                                      HorizontalAlignment="Left"/>
                            <controls:MonitorGraph Data="{Binding LeadIIIData}"
                                                  StrokeColor="#2ECC71"/>
                        </Grid>
                    </Border>
                    
                    <!-- Lead AVR -->
                    <Border Background="#1a1a1a" 
                            BorderBrush="#2ECC71" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Margin="2"
                            Height="28">
                        <Grid>
                            <TextBlock Text="aVR" 
                                      FontSize="7" 
                                      Foreground="#888" 
                                      Margin="3,2,0,0"
                                      VerticalAlignment="Top"
                                      HorizontalAlignment="Left"/>
                            <controls:MonitorGraph Data="{Binding LeadAVRData}"
                                                  StrokeColor="#2ECC71"/>
                        </Grid>
                    </Border>
                    
                    <!-- Lead AVL -->
                    <Border Background="#1a1a1a" 
                            BorderBrush="#2ECC71" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Margin="2"
                            Height="28">
                        <Grid>
                            <TextBlock Text="aVL" 
                                      FontSize="7" 
                                      Foreground="#888" 
                                      Margin="3,2,0,0"
                                      VerticalAlignment="Top"
                                      HorizontalAlignment="Left"/>
                            <controls:MonitorGraph Data="{Binding LeadAVLData}"
                                                  StrokeColor="#2ECC71"/>
                        </Grid>
                    </Border>
                    
                    <!-- Respiratory -->
                    <Border Background="#1a1a1a" 
                            BorderBrush="#3498DB" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Margin="2"
                            Height="28">
                        <Grid>
                            <TextBlock Text="RESP" 
                                      FontSize="7" 
                                      Foreground="#888" 
                                      Margin="3,2,0,0"
                                      VerticalAlignment="Top"
                                      HorizontalAlignment="Left"/>
                            <controls:MonitorGraph Data="{Binding RespiratoryData}"
                                                  StrokeColor="#3498DB"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>
            
            <!-- Right: Vital Signs Values -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <!-- Heart Rate -->
                <StackPanel HorizontalAlignment="Center" Margin="0,5">
                    <TextBlock Text="HR" 
                               FontSize="8" 
                               Foreground="#888"
                               HorizontalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding CurrentHeartRate}" 
                                  FontSize="18" 
                                  FontWeight="Bold" 
                                  Foreground="#2ECC71"/>
                        <TextBlock Text=" bpm" 
                                  FontSize="7" 
                                  Foreground="#888" 
                                  VerticalAlignment="Bottom" 
                                  Margin="2,0,0,2"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Blood Pressure -->
                <StackPanel HorizontalAlignment="Center" Margin="0,5">
                    <TextBlock Text="BP" 
                               FontSize="8" 
                               Foreground="#888"
                               HorizontalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding CurrentSystolic}" 
                                  FontSize="16" 
                                  FontWeight="Bold" 
                                  Foreground="#E74C3C"/>
                        <TextBlock Text="/" 
                                  FontSize="16" 
                                  Foreground="#888" 
                                  Margin="1,0"/>
                        <TextBlock Text="{Binding CurrentDiastolic}" 
                                  FontSize="16" 
                                  FontWeight="Bold" 
                                  Foreground="#E74C3C"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Respiratory Rate -->
                <StackPanel HorizontalAlignment="Center" Margin="0,5">
                    <TextBlock Text="RESP" 
                               FontSize="8" 
                               Foreground="#888"
                               HorizontalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding CurrentRespiratoryRate}" 
                                  FontSize="16" 
                                  FontWeight="Bold" 
                                  Foreground="#3498DB"/>
                        <TextBlock Text="/min" 
                                  FontSize="7" 
                                  Foreground="#888" 
                                  VerticalAlignment="Bottom" 
                                  Margin="2,0,0,2"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- SpO2 -->
                <StackPanel HorizontalAlignment="Center" Margin="0,5">
                    <TextBlock Text="SpO2" 
                               FontSize="8" 
                               Foreground="#888"
                               HorizontalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding CurrentSpO2}" 
                                  FontSize="16" 
                                  FontWeight="Bold" 
                                  Foreground="#fff"/>
                        <TextBlock Text="%" 
                                  FontSize="7" 
                                  Foreground="#888" 
                                  VerticalAlignment="Bottom" 
                                  Margin="2,0,0,2"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
