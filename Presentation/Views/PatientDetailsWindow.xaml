<Window x:Class="WPFTest.Presentation.Views.PatientDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:WPFTest.Presentation.Controls"
        mc:Ignorable="d"
        Title="Patient Details" Height="600" Width="800"
        Background="#0f0f0f">
    <Grid Margin="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <!-- Patient Information Section -->
                <controls:PatientInformationControl DataContext="{Binding Patient}" 
                                                    Margin="0,0,0,10"/>

                <!-- Vital Signs Section -->
                <Border Background="#1a1a1a"
                        BorderBrush="#2ECC71"
                        BorderThickness="1"
                        CornerRadius="10"
                        Padding="15"
                        Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Current Vital Signs"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#2ECC71"
                                   Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- ECG Lead I -->
                            <Border Grid.Row="0"
                                    Background="#252525"
                                    CornerRadius="5"
                                    Padding="10"
                                    Margin="0,0,0,10">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ShowHeartRate}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" Background="#0d0d0d" CornerRadius="3" Margin="0,0,5,0">
                                        <Grid>
                                            <controls:MonitorGraph Data="{Binding Patient.LeadIData}" 
                                                                 StrokeColor="#2ECC71" 
                                                                 Height="60"/>
                                            <TextBlock Text="Lead I" 
                                                       FontSize="10" 
                                                       Foreground="#2ECC71" 
                                                       Margin="5" 
                                                       VerticalAlignment="Top" 
                                                       HorizontalAlignment="Left"/>
                                        </Grid>
                                    </Border>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding Patient.CurrentHeartRate}"
                                                       FontSize="20"
                                                       FontWeight="Bold"
                                                       Foreground="#2ECC71"/>
                                            <TextBlock Text=" bpm"
                                                       FontSize="10"
                                                       Foreground="#888"
                                                       VerticalAlignment="Bottom"
                                                       Margin="2,0,0,2"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- ECG Lead II -->
                            <Border Grid.Row="1"
                                    Background="#252525"
                                    CornerRadius="5"
                                    Padding="10"
                                    Margin="0,0,0,10">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ShowHeartRate}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" Background="#0d0d0d" CornerRadius="3" Margin="0,0,5,0">
                                        <Grid>
                                            <controls:MonitorGraph Data="{Binding Patient.LeadIIData}" 
                                                                 StrokeColor="#2ECC71" 
                                                                 Height="60"/>
                                            <TextBlock Text="Lead II" 
                                                       FontSize="10" 
                                                       Foreground="#2ECC71" 
                                                       Margin="5" 
                                                       VerticalAlignment="Top" 
                                                       HorizontalAlignment="Left"/>
                                        </Grid>
                                    </Border>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding Patient.CurrentHeartRate}"
                                                       FontSize="20"
                                                       FontWeight="Bold"
                                                       Foreground="#2ECC71"/>
                                            <TextBlock Text=" bpm"
                                                       FontSize="10"
                                                       Foreground="#888"
                                                       VerticalAlignment="Bottom"
                                                       Margin="2,0,0,2"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- ECG Lead III -->
                            <Border Grid.Row="2"
                                    Background="#252525"
                                    CornerRadius="5"
                                    Padding="10"
                                    Margin="0,0,0,10">
