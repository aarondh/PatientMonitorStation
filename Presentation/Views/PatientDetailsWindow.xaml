                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding Patient.CurrentSpO2}"
                                                       FontSize="20"
                                                       FontWeight="Bold"
                                                       Foreground="#fff"/>
                                            <TextBlock Text=" %"
                                                       FontSize="10"
                                                       Foreground="#888"
                                                       VerticalAlignment="Bottom"
                                                       Margin="2,0,0,2"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Pulse Rate -->
                            <Border Grid.Row="8"
                                    Background="#252525"
                                    CornerRadius="5"
                                    Padding="10"
                                    Margin="0,0,0,10">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ShowPulseRate}" Value="False">
