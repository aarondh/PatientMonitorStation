                                                       Foreground="#888"
                                                       VerticalAlignment="Bottom"
                                                       Margin="2,0,0,2"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Toggle Controls Section -->
                <Border Background="#1a1a1a"
                        BorderBrush="#2ECC71"
                        BorderThickness="1"
                        CornerRadius="10"
                        Padding="15">
                    <StackPanel>
                        <TextBlock Text="Vital Signs Display Settings"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#2ECC71"
                                   Margin="0,0,0,15"/>

                        <StackPanel>
                            <!-- Lead I Settings -->
                            <Border Background="#252525"
                                    BorderBrush="#444"
                                    BorderThickness="1"
                                    CornerRadius="5"
                                    Padding="10"
                                    Margin="0,5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" 
                                               Text="ECG Lead I" 
                                               FontSize="14" 
                                               Foreground="#fff"
                                               VerticalAlignment="Center"/>
                                    
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock Text="State: " FontSize="12" Foreground="#888" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <ComboBox SelectedValue="{Binding LeadISetting.State}" 
                                                  Width="120"
                                                  Background="#1a1a1a"
                                                  Foreground="#fff"
                                                  BorderBrush="#555">
                                            <ComboBox.ItemsSource>
                                                <x:Array Type="system:String" xmlns:system="clr-namespace:System;assembly=mscorlib">
                                                    <system:String>None</system:String>
                                                    <system:String>Vital</system:String>
                                                    <system:String>Graph</system:String>
                                                    <system:String>Both</system:String>
                                                </x:Array>
                                            </ComboBox.ItemsSource>
                                        </ComboBox>
                                    </StackPanel>
                                </Grid>
                            </Border>

