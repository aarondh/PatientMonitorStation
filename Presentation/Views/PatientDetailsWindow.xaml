<Window x:Class="WPFTest.Presentation.Views.PatientDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:WPFTest.Presentation.Controls"
        mc:Ignorable="d"
        Title="Patient Details" Height="600" Width="800"
        Background="#0f0f0f">
    <Grid Margin="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <!-- Patient Information Section -->
                <controls:PatientInformationControl DataContext="{Binding Patient}" 
                                                    Margin="0,0,0,10"/>

                <!-- Vital Signs Section -->
                <Border Background="#1a1a1a"
                        BorderBrush="#2ECC71"
                        BorderThickness="1"
                        CornerRadius="10"
                        Padding="15"
                        Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Current Vital Signs"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#2ECC71"
                                   Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- ECG Lead I -->
                            <Border Grid.Row="0"
                                    Background="#252525"
                                    CornerRadius="5"
                                    Padding="10"
                                    Margin="0,0,0,10">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ShowHeartRate}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" Background="#0d0d0d" CornerRadius="3" Margin="0,0,5,0">
                                        <Grid>
                                            <controls:MonitorGraph Data="{Binding Patient.LeadIData}" 
                                                                 StrokeColor="#2ECC71" 
                                                                 Height="60"/>
                                            <TextBlock Text="Lead I" 
                                                       FontSize="10" 
                                                       Foreground="#2ECC71" 
                                                       Margin="5" 
                                                       VerticalAlignment="Top" 
                                                       HorizontalAlignment="Left"/>
                                        </Grid>
                                    </Border>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding Patient.CurrentHeartRate}"
                                                       FontSize="20"
                                                       FontWeight="Bold"
                                                       Foreground="#2ECC71"/>
                                            <TextBlock Text=" bpm"
                                                       FontSize="10"
                                                       Foreground="#888"
                                                       VerticalAlignment="Bottom"
                                                       Margin="2,0,0,2"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- ECG Lead II -->
                            <Border Grid.Row="1"
                                    Background="#252525"
                                    CornerRadius="5"
                                    Padding="10"
                                    Margin="0,0,0,10">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ShowHeartRate}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" Background="#0d0d0d" CornerRadius="3" Margin="0,0,5,0">
                                        <Grid>
                                            <controls:MonitorGraph Data="{Binding Patient.LeadIIData}" 
                                                                 StrokeColor="#2ECC71" 
                                                                 Height="60"/>
                                            <TextBlock Text="Lead II" 
                                                       FontSize="10" 
                                                       Foreground="#2ECC71" 
                                                       Margin="5" 
                                                       VerticalAlignment="Top" 
                                                       HorizontalAlignment="Left"/>
                                        </Grid>
                                    </Border>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding Patient.CurrentHeartRate}"
                                                       FontSize="20"
                                                       FontWeight="Bold"
                                                       Foreground="#2ECC71"/>
                                            <TextBlock Text=" bpm"
                                                       FontSize="10"
                                                       Foreground="#888"
                                                       VerticalAlignment="Bottom"
                                                       Margin="2,0,0,2"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- ECG Lead III -->
                            <Border Grid.Row="2"
                                    Background="#252525"
                                    CornerRadius="5"
                                    Padding="10"
                                    Margin="0,0,0,10">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ShowHeartRate}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" Background="#0d0d0d" CornerRadius="3" Margin="0,0,5,0">
                                        <Grid>
                                            <controls:MonitorGraph Data="{Binding Patient.LeadIIIData}" 
                                                                 StrokeColor="#2ECC71" 
                                                                 Height="60"/>
                                            <TextBlock Text="Lead III" 
                                                       FontSize="10" 
                                                       Foreground="#2ECC71" 
                                                       Margin="5" 
                                                       VerticalAlignment="Top" 
                                                       HorizontalAlignment="Left"/>
                                        </Grid>
                                    </Border>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding Patient.CurrentHeartRate}"
                                                       FontSize="20"
                                                       FontWeight="Bold"
                                                       Foreground="#2ECC71"/>
                                            <TextBlock Text=" bpm"
                                                       FontSize="10"
                                                       Foreground="#888"
                                                       VerticalAlignment="Bottom"
                                                       Margin="2,0,0,2"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- ECG Lead aVR -->
                            <Border Grid.Row="3"
                                    Background="#252525"
                                    CornerRadius="5"
                                    Padding="10"
                                    Margin="0,0,0,10">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ShowHeartRate}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" Background="#0d0d0d" CornerRadius="3" Margin="0,0,5,0">
                                        <Grid>
                                            <controls:MonitorGraph Data="{Binding Patient.LeadAVRData}" 
                                                                 StrokeColor="#2ECC71" 
                                                                 Height="60"/>
                                            <TextBlock Text="aVR" 
                                                       FontSize="10" 
                                                       Foreground="#2ECC71" 
                                                       Margin="5" 
                                                       VerticalAlignment="Top" 
                                                       HorizontalAlignment="Left"/>
                                        </Grid>
                                    </Border>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding Patient.CurrentHeartRate}"
                                                       FontSize="20"
                                                       FontWeight="Bold"
                                                       Foreground="#2ECC71"/>
                                            <TextBlock Text=" bpm"
                                                       FontSize="10"
                                                       Foreground="#888"
                                                       VerticalAlignment="Bottom"
                                                       Margin="2,0,0,2"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- ECG Lead aVL -->
                            <Border Grid.Row="4"
                                    Background="#252525"
                                    CornerRadius="5"
                                    Padding="10"
                                    Margin="0,0,0,10">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ShowHeartRate}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" Background="#0d0d0d" CornerRadius="3" Margin="0,0,5,0">
                                        <Grid>
                                            <controls:MonitorGraph Data="{Binding Patient.LeadAVLData}" 
                                                                 StrokeColor="#2ECC71" 
                                                                 Height="60"/>
                                            <TextBlock Text="aVL" 
                                                       FontSize="10" 
                                                       Foreground="#2ECC71" 
                                                       Margin="5" 
                                                       VerticalAlignment="Top" 
                                                       HorizontalAlignment="Left"/>
                                        </Grid>
                                    </Border>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding Patient.CurrentHeartRate}"
                                                       FontSize="20"
                                                       FontWeight="Bold"
                                                       Foreground="#2ECC71"/>
                                            <TextBlock Text=" bpm"
                                                       FontSize="10"
                                                       Foreground="#888"
                                                       VerticalAlignment="Bottom"
                                                       Margin="2,0,0,2"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Blood Pressure -->
                            <Border Grid.Row="5"
                                    Background="#252525"
                                    CornerRadius="5"
                                    Padding="10"
                                    Margin="0,0,0,10">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ShowBloodPressure}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" Background="#0d0d0d" CornerRadius="3" Margin="0,0,5,0">
                                        <TextBlock Text="No continuous waveform"
                                                   FontSize="11"
                                                   Foreground="#555"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock FontSize="20"
                                                       FontWeight="Bold"
                                                       Foreground="#E74C3C">
                                                <Run Text="{Binding Patient.CurrentSystolic, Mode=OneWay}"/>
                                                <Run Text="/"/>
                                                <Run Text="{Binding Patient.CurrentDiastolic, Mode=OneWay}"/>
                                            </TextBlock>
                                        </StackPanel>
                                        <TextBlock Text="mmHg"
                                                   FontSize="10"
                                                   Foreground="#888"
                                                   TextAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Respiratory Rate -->
                            <Border Grid.Row="6"
                                    Background="#252525"
                                    CornerRadius="5"
                                    Padding="10"
                                    Margin="0,0,0,10">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ShowRespiratoryRate}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" Background="#0d0d0d" CornerRadius="3" Margin="0,0,5,0">
                                        <controls:MonitorGraph Data="{Binding Patient.RespiratoryData}" 
                                                             StrokeColor="#3498DB" 
                                                             Height="60"/>
                                    </Border>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding Patient.CurrentRespiratoryRate}"
                                                       FontSize="20"
                                                       FontWeight="Bold"
                                                       Foreground="#3498DB"/>
                                            <TextBlock Text=" /min"
                                                       FontSize="10"
                                                       Foreground="#888"
                                                       VerticalAlignment="Bottom"
                                                       Margin="2,0,0,2"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- SpO2 -->
                            <Border Grid.Row="7"
                                    Background="#252525"
                                    CornerRadius="5"
                                    Padding="10"
                                    Margin="0,0,0,10">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ShowSpO2}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" Background="#0d0d0d" CornerRadius="3" Margin="0,0,5,0">
                                        <TextBlock Text="No continuous waveform"
                                                   FontSize="11"
                                                   Foreground="#555"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding Patient.CurrentSpO2}"
                                                       FontSize="20"
                                                       FontWeight="Bold"
                                                       Foreground="#fff"/>
                                            <TextBlock Text=" %"
                                                       FontSize="10"
                                                       Foreground="#888"
                                                       VerticalAlignment="Bottom"
                                                       Margin="2,0,0,2"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Pulse Rate -->
                            <Border Grid.Row="8"
                                    Background="#252525"
                                    CornerRadius="5"
                                    Padding="10"
                                    Margin="0,0,0,10">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ShowPulseRate}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" Background="#0d0d0d" CornerRadius="3" Margin="0,0,5,0">
                                        <controls:MonitorGraph Data="{Binding Patient.HeartRateData}" 
                                                             StrokeColor="#1ABC9C" 
                                                             Height="60"/>
                                    </Border>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding Patient.CurrentPulseRate}"
                                                       FontSize="20"
                                                       FontWeight="Bold"
                                                       Foreground="#1ABC9C"/>
                                            <TextBlock Text=" bpm"
                                                       FontSize="10"
                                                       Foreground="#888"
                                                       VerticalAlignment="Bottom"
                                                       Margin="2,0,0,2"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Monitor Settings Section -->
                <Border Background="#1a1a1a"
                        BorderBrush="#2ECC71"
                        BorderThickness="1"
                        CornerRadius="10"
                        Padding="15">
                    <StackPanel>
                        <TextBlock Text="Monitor Settings"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#2ECC71"
                                   Margin="0,0,0,15"/>

                        <UniformGrid Columns="3">
                            <!-- Heart Rate Monitor -->
                            <controls:MonitorSettingEditor
                                MonitorName="Heart Rate"
                                Setting="{Binding PatientMonitor.MonitorSettings[HeartRate]}" />

                            <!-- Lead I Monitor -->
                            <controls:MonitorSettingEditor
                                MonitorName="ECG Lead I"
                                Setting="{Binding PatientMonitor.MonitorSettings[LeadI]}" />

                            <!-- Lead II Monitor -->
                            <controls:MonitorSettingEditor
                                MonitorName="ECG Lead II"
                                Setting="{Binding PatientMonitor.MonitorSettings[LeadII]}" />

                            <!-- Lead III Monitor -->
                            <controls:MonitorSettingEditor
                                MonitorName="ECG Lead III"
                                Setting="{Binding PatientMonitor.MonitorSettings[LeadIII]}" />

                            <!-- Lead aVR Monitor -->
                            <controls:MonitorSettingEditor
                                MonitorName="ECG Lead aVR"
                                Setting="{Binding PatientMonitor.MonitorSettings[LeadAVR]}" />

                            <!-- Lead aVL Monitor -->
                            <controls:MonitorSettingEditor
                                MonitorName="ECG Lead aVL"
                                Setting="{Binding PatientMonitor.MonitorSettings[LeadAVL]}" />

                            <!-- Blood Pressure Monitor -->
                            <controls:MonitorSettingEditor
                                MonitorName="Blood Pressure"
                                Setting="{Binding PatientMonitor.MonitorSettings[BloodPressure]}" />

                            <!-- Respiratory Rate Monitor -->
                            <controls:MonitorSettingEditor
                                MonitorName="Respiratory Rate"
                                Setting="{Binding PatientMonitor.MonitorSettings[RespiratoryRate]}" />

                            <!-- SpO2 Monitor -->
                            <controls:MonitorSettingEditor
                                MonitorName="SpOâ‚‚"
                                Setting="{Binding PatientMonitor.MonitorSettings[SpO2]}" />

                            <!-- Pulse Rate Monitor -->
                            <controls:MonitorSettingEditor
                                MonitorName="Pulse Rate"
                                Setting="{Binding PatientMonitor.MonitorSettings[PulseRate]}" />
                        </UniformGrid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
